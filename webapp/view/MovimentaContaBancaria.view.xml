<mvc:View
controllerName="br.com.idxtecMovimentaContaBancaria.controller.MovimentaContaBancaria" 
xmlns:html="http://www.w3.org/1999/xhtml"
xmlns:mvc="sap.ui.core.mvc"
displayBlock="true"
xmlns="sap.m"
xmlns:t="sap.ui.table">
	<App id="app">
		<pages>
			<Page showHeader="false">
				<content>
					<VBox class="sapUiSmallMargin">
						<Panel headerText="Movimento Conta Bancária">
							<t:Table id="tableMovimento"
								rows="{
									path: '/MovimentoContaBancarias',
									parameters: {
										expand: 'ContaBancariaDetails'
									}
								}"
								class="sapUiSizeCondensed"
								selectionMode="Single"
								selectionBehavior="Row"
								enableSelectAll="false"
								editable="true"
								visibleRowCountMode="Auto"
								enableBusyIndicator="true"
								alternateRowColors="true"
								enableCustomFilter="false">
								<t:toolbar>
									<Toolbar>
										<Title text="Lista de Movimentos"/>
									</Toolbar>
								</t:toolbar>
								<t:columns>
									<t:Column filterProperty="ContaBancariaDetails/Descricao" sortProperty="ContaBancariaDetails/Descricao">
										<Label text="Conta bancária"/>
										<t:template>
											<Text text="{ContaBancariaDetails/Descricao}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Debito" sortProperty="Debito">
										<Label text="Débito"/>
										<t:template>
											<Text text="{path: 'Debito',
												type: 'sap.ui.model.odata.type.Single',
					                            formatOptions:{
					                                decimals: 2,
					                                decimalSeparator: ','
					                            }}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Credito" sortProperty="Credito">
										<Label text="Crédito"/>
										<t:template>
											<Text text="{path: 'Credito',
												type: 'sap.ui.model.odata.type.Single',
					                            	formatOptions:{
					                                	decimals: 2,
					                            		decimalSeparator: ','
					                            	}}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Cheque" sortProperty="Cheque">
										<Label text="Cheque"/>
										<t:template>
											<Text text="{Cheque}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Conciliado" sortProperty="Conciliado">
										<Label text="Conciliado"/>
										<t:template>
											<Checkbox selected="{Conciliado}" editable="false"/>
										</t:template>
									</t:Column>
								</t:columns>
								<t:footer>
									<Toolbar>
										<Button icon="sap-icon://refresh" press="onRefresh"/>
										<ToolbarSpacer/>
										<Button icon="sap-icon://filter"/>
										<Button icon="sap-icon://clear-filter"/>
									</Toolbar>
								</t:footer>
							</t:Table>
						</Panel> 
					</VBox> 
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" text="Incluir novo" press="onIncluir"/>
						<Button icon="sap-icon://edit" text="Editar" press="onEditar"/>
						<Button icon="sap-icon://delete" text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>